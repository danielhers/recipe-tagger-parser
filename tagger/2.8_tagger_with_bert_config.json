{
    "dataset_reader": {
        "type": "conll2003",
        "coding_scheme": "BIOUL",
        "tag_label": "ner",
        "token_indexers": {
            "token_characters": {
                "type": "characters",
                "min_padding_length": 3
            },
            "tokens": {
                "type": "pretrained_transformer_mismatched",
                "max_length": 128,
                "model_name": "bert-base-multilingual-cased"
            }
        }
    },
    "model": {
        "type": "crf_tagger",
        "dropout": 0.5,
        "encoder": {
            "type": "lstm",
            "bidirectional": true,
            "dropout": 0.5,
            "hidden_size": 200,
            "input_size": 896,
            "num_layers": 2
        },
        "label_encoding": "BIOUL",
        "regularizer": {
            "regexes": [
                [
                    "scalar_parameters",
                    {
                        "alpha": 0.1,
                        "type": "l2"
                    }
                ]
            ]
        },
        "text_field_embedder": {
            "token_embedders": {
                "token_characters": {
                    "type": "character_encoding",
                    "embedding": {
                        "embedding_dim": 16,
                        "vocab_namespace": "token_characters"
                    },
                    "encoder": {
                        "type": "cnn",
                        "conv_layer_activation": "relu",
                        "embedding_dim": 16,
                        "ngram_filter_sizes": [
                            3
                        ],
                        "num_filters": 128
                    }
                },
                "tokens": {
                    "type": "custom_pretrained_transformer_mismatched",
                    "gradient_checkpointing": true,
                    "max_length": 128,
                    "model_name": "bert-base-multilingual-cased"
                }
            }
        }
    },
    "train_data_path": "/proj/cookbook/interactive-cookbook/data/English/Tagger/train.conll03",
    "validation_data_path": "/proj/cookbook/interactive-cookbook/data/English/Tagger/dev.conll03",
    "test_data_path": "/proj/cookbook/interactive-cookbook/data/English/Tagger/test.conll03",
    "trainer": {
        "checkpointer": {
            "keep_most_recent_by_count": 1
        },
        "cuda_device": 1,
        "grad_norm": 10,
        "num_epochs": 100,
        "num_gradient_accumulation_steps": 1,
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        },
        "patience": 25,
        "run_confidence_checks": false,
        "use_amp": false,
        "validation_metric": "+accuracy"
    },
    "data_loader": {
        "batch_size": 30
    },
    "datasets_for_vocab_creation": [
        "train"
    ],
    "evaluate_on_test": true
}