{
    "dataset_reader": {
        "type": "conll2003",
        "coding_scheme": "BIOUL",
        "tag_label": "ner",
        "token_indexers": {
            "tokens": {
                "type": "pretrained_transformer_mismatched",
                "max_length": 128,
                "model_name": "facebook/bart-large"
            }
        }
    },
    "model": {
        "type": "crf_tagger",
        "dropout": 0.5,
        "encoder": {
            "type": "lstm",
            "bidirectional": true,
            "dropout": 0.5,
            "hidden_size": 200,
            "input_size": 1024,
            "num_layers": 2
        },
        "label_encoding": "BIOUL",
        "regularizer": {
            "regexes": [
                [
                    "scalar_parameters",
                    {
                        "alpha": 0.1,
                        "type": "l2"
                    }
                ]
            ]
        },
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "custom_pretrained_transformer_mismatched",
                    "gradient_checkpointing": true,
                    "max_length": 128,
                    "model_name": "facebook/bart-large",
                    "sub_module": "encoder"
                }
            }
        }
    },
    "train_data_path": "/proj/cookbook/interactive-cookbook/data/English/Tagger/train.conll03",
    "validation_data_path": "/proj/cookbook/interactive-cookbook/data/English/Tagger/dev.conll03",
    "test_data_path": "/proj/cookbook/interactive-cookbook/data/English/Tagger/test.conll03",
    "trainer": {
        "checkpointer": {
            "keep_most_recent_by_count": 1
        },
        "cuda_device": 0,
        "grad_norm": 10,
        "num_epochs": 100,
        "num_gradient_accumulation_steps": 1,
        "optimizer": {
            "type": "adam",
            "lr": 0.0001
        },
        "patience": 50,
        "run_confidence_checks": false,
        "use_amp": false,
        "validation_metric": "+accuracy"
    },
    "data_loader": {
        "batch_size": 10
    },
    "datasets_for_vocab_creation": [
        "train"
    ],
    "evaluate_on_test": true
}