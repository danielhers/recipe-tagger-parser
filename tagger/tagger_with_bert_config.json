{
    "dataset_reader": {
        "type": "conll2003",
        "tag_label": "ner",
        "token_indexers": {
            "bert": {
                "type": "bert-pretrained",
                "pretrained_model": "bert-base-multilingual-cased"
            },
            "token_characters": {
                "type": "characters"
            }
        }
    },
    "train_data_path": "data/English/Tagger/train.conll03",
    "validation_data_path": "data/English/Tagger/dev.conll03",
    "test_data_path": "data/English/Tagger/test.conll03",
    "evaluate_on_test": false,
    "model": {
        "type": "crf_tagger",
        "label_encoding": "BIOUL",
        "dropout": 0.5,
        "verbose_metrics":true,
        "include_start_end_transitions": false,
        "text_field_embedder": {
            "allow_unmatched_keys": true,
            "embedder_to_indexer_map": {
                "bert": ["bert", "bert-offsets"],
                "token_characters": ["token_characters"]
            },
            "token_embedders": {
                "bert": {
                    "type": "bert-pretrained",
                    "pretrained_model":"bert-base-multilingual-cased",
                    "top_layer_only": true,
                    "requires_grad": false
                },
                "token_characters": {
                    "type": "character_encoding",
                    "embedding": {
                        "embedding_dim": 16
                    },
                    "encoder": {
                        "type": "cnn",
                        "embedding_dim": 16,
                        "num_filters": 128,
                        "ngram_filter_sizes": [
                            3
                        ],
                        "conv_layer_activation": "relu"
                    }
                }
            }
        },
        "encoder": {
            "type": "lstm",
            "input_size": 896,
            "hidden_size": 200,
            "num_layers": 2,
            "dropout": 0.5,
            "bidirectional": true
        },
        "regularizer": [
            [
                "scalar_parameters",
                {
                    "type": "l2",
                    "alpha": 0.1
                }
            ]
        ]
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [["tokens", "num_tokens"]],
        "batch_size": 30
    },
    "trainer": {
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        },
        "validation_metric": "+accuracy",
        "num_serialized_models_to_keep": 1,
        "num_epochs": 75,
        "grad_norm": 10.0,
        "patience": 10,
        "cuda_device": 3
    }
}
