{
    "dataset_reader": {
        "type": "conll2003",
        "tag_label": "ner",
        "token_indexers": {
            
            "token_characters": {
                "type": "characters"
            },
            "elmo": {
                "type": "elmo_characters"
            }
        }
    },
    "train_data_path": "../../../data/German/Tagger/train.conll03",
    "validation_data_path": "../../../data/German/Tagger/dev.conll03",
    "test_data_path": "../../../data/German/Tagger/test.conll03",
    "evaluate_on_test": false,
    "model": {
        "type": "crf_tagger",
        "label_encoding": "BIOUL",
        "dropout": 0.5,
        "verbose_metrics":true,
        "include_start_end_transitions": false,
        "text_field_embedder": {
            "elmo": {
                "type": "elmo_token_embedder",
                "options_file": "Parameters/elmo_options_german.json",
                "weight_file": "Parameters/elmo_weights_german.hdf5",
                "do_layer_norm": false,
                "dropout": 0.0
            },
            "token_characters": {
                "type": "character_encoding",
                "embedding": {
                    "embedding_dim": 16
                },
                "encoder": {
                    "type": "cnn",
                    "embedding_dim": 16,
                    "num_filters": 128,
                    "ngram_filter_sizes": [
                        3
                    ],
                    "conv_layer_activation": "relu"
                }
            }
        },
        "encoder": {
            "type": "lstm",
            "input_size": 1152,
            "hidden_size": 50,
            "num_layers": 2,
            "dropout": 0.5,
            "bidirectional": true
        },
        "regularizer": [
            [
                "scalar_parameters",
                {
                    "type": "l2",
                    "alpha": 0.5
                }
            ]
        ]
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [["tokens", "num_tokens"]],
        "batch_size": 30
    },
    "trainer": {
        "optimizer": {
            "type": "adam",
            "lr": 0.0075
        },
        "validation_metric": "+accuracy",
        "num_serialized_models_to_keep": 1,
        "num_epochs": 100, 
        "grad_norm": 10.0,
        "patience": 10,
        "cuda_device": 1
    }
}
